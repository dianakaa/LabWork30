<Window x:Class="LabWork30.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork30"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Логин:" FontSize="20" />
            <TextBox x:Name="LoginTextBox" Width="400" FontSize="20"/>

            <Label Content="Email:" FontSize="20" />
            <TextBox x:Name="EmailTextBox" Width="400" FontSize="20"/>

            <CheckBox x:Name="AgreeCheckBox" Content="Я согласен на получение рассылки" FontSize="20" Margin="10" Checked="AgreeCheckBox_Checked" Unchecked="AgreeCheckBox_Unchecked"/>

            <Button x:Name="SubscribeButton" Content="Подписаться" Click="SubscribeButton_Click" Width="150" IsEnabled="False" FontSize="20" />
        </StackPanel>
    </Grid>
</Window>
